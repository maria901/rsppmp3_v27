#include "comb.h"

comb::comb ()
{
  filterstore = 0;
  bufidx = 0;
}

void
comb::setbuffer (float *buf, int size)
{
  buffer = buf;
  bufsize = size;
}

void
comb::mute ()
{
  for (int i = 0; i < bufsize; i++)
    buffer[i] = 0;
}

void
comb::setdamp (float val)
{
  damp1 = val;
  damp2 = 1 - val;
}

float
comb::getdamp ()
{
  return damp1;
}

void
comb::setfeedback (float val)
{
  feedback = val;
}

float
comb::getfeedback ()
{
  return feedback;
}

// ends
