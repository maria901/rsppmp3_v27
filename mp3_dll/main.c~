// #define NDEBUG

#undef NDEBUG
#include <assert.h>



void
dprintf_z (const char *format, ...)
{
//#line 353
//#error  C2059: syntax error : '}'
#ifdef RSPDEBUG

  {

    int rete;
    va_list args;
    static char buffer[1000000];
    int ret;

    rete = GetLastError ();

    va_start (args, format);
    ret = vsprintf (buffer, format, args);
    OutputDebugString (buffer);
    printf (buffer);

//setmessage (501, buffer);
//rspsendmessage ();

    SetLastError (rete);

  }
#else

  return;
#endif


}

typedef int (__stdcall * PlayMp3) (int number, char *filename, int loop);
PlayMp3 PlayMp3_f;



int
main ()
{

  HMODULE hmod;

  int funcao = 0;









  hmod = LoadLibrary ("rspmp3ocx1.dll");

  if (0 == hmod)
    {
      dprintf_z ("Error loading dll\n");
      goto saida;
    }



  PlayMp3_f = (void *) GetProcAddress (hmod, "PlayMp3");

  PlayMp3_f (4, "c:\\orinoco.mp3", 0);
  PlayMp3_f (5, "c:\\orinoco.mp3", 0);



  while (1)
    {
      int ret;

      //printf("Vai chamar getchar\n");
      ret = getch ();

      if ('q' == ret)
	{
	  break;
	}

    }




saida:
  dprintf_z ("saindo\n");
  return 0;
}
